{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "stereometrija-app",
  "version": "0.1.0",
  "identifier": "com.stereometrija-app.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PlainStereo",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --autoplay-policy=no-user-gesture-required"
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "dialog": {
      "all": true,
      "save": true
    },
    "fs": {
      "scope": ["$DOWNLOAD/*", "$DOCUMENT/*", "$DESKTOP/*"],
      "all": true,
      "writeFile": true,
      "readFile": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
