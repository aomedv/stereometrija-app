#!/usr/bin/env node

// This script is a wrapper to invoke the Tauri CLI during Android builds
// It finds and executes the @tauri-apps/cli package installed in node_modules

import { spawn } from 'child_process';
import path from 'path';
import fs from 'fs';
import { fileURLToPath } from 'url';
import { dirname } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Find the Tauri CLI binary
const projectRoot = path.resolve(__dirname, '..');
const tauriCliPath = path.join(projectRoot, 'node_modules', '@tauri-apps', 'cli', 'tauri.js');

// Check if the CLI exists
if (!fs.existsSync(tauriCliPath)) {
  console.error('Error: @tauri-apps/cli not found. Please run npm install.');
  process.exit(1);
}

// Execute the Tauri CLI with all passed arguments
const args = process.argv.slice(2);
const tauriProcess = spawn('node', [tauriCliPath, ...args], {
  cwd: projectRoot,
  stdio: 'inherit',
  shell: false
});

tauriProcess.on('exit', (code) => {
  process.exit(code || 0);
});

tauriProcess.on('error', (err) => {
  console.error('Error executing Tauri CLI:', err);
  process.exit(1);
});

